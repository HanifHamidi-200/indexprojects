<Window x:Class="TheLearningCurve.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheLearningCurve"
        mc:Ignorable="d"
        Title="TheLearningCurve" Height="510" Width="480">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" = 240"/>
            <ColumnDefinition Width=" = 240"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="240"/>
            <RowDefinition Height="240"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="#FFE03F3F">
            <Button Content="Go towards it"/>
            <Button Content="Submit information"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1"  Background="#FFC5883F">
            <Image Source="pics/F wrong.png" Margin="20"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1"  Background="#FF5E82E2">
            <Image Source="pics/F right.png" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
