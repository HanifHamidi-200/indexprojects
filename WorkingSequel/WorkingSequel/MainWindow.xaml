<Window x:Class="WorkingSequel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkingSequel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Button x:Name="btnWorking" Content="WORKING!" Background="#FF4CAE14" MouseDoubleClick="btnWorking_MouseDoubleClick"/>
            <Button x:Name="btnSequel" Content="SEQUEL" Background="#FF327EBD" MouseDoubleClick="btnSequel_MouseDoubleClick"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" Background="Black">
            <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFA23C3C">
                <ListBoxItem x:Name="lbl1">lebell</ListBoxItem>
                <ListBoxItem x:Name="lbl2">case</ListBoxItem>
                <ListBoxItem x:Name="lbl3">dominic</ListBoxItem>
                <ListBoxItem x:Name="lbl4">standby</ListBoxItem>
            </ListBox>

        </StackPanel>
    </Grid>
</Window>
